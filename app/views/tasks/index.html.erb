<!DOCTYPE html>
<html>
  <head>
    <title>Tasklist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  </head>
  <body>
    <%= yield %>
    <h1>タスク一覧</h1>
    
    <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.id, task %>:<%= task.content %></li>
      <% end %>
    </ul>
    <%= link_to '新規のタスク投稿',new_task_path %>
  </body>
</html>